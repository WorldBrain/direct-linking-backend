{
  "name": "direct-linking-server",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node build/main.js",
    "dev": "better-npm-run dev",
    "devmon": "better-npm-run devmon",
    "prepare": "tsc",
    "prepare:watch": "tsc --watch",
    "typings": "typings",
    "prepare-and-test": "npm run prepare && mocha build/**/*.test.js",
    "test": "mocha --require ts-node/register 'src/**/*.test.ts'",
    "test:watch": "mocha -r ts-node/register 'src/**/*.test.ts' -R min --watch --watch-extensions ts",
    "test:watch-verbose": "mocha -r ts-node/register 'src/**/*.test.ts' --watch --watch-extensions ts"
  },
  "betterScripts": {
    "devmon": {
      "command": "nodemon --trace-warnings --watch build build/main.js",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "dev": {
      "command": "node --trace-warnings build/main.js",
      "env": {
        "NODE_ENV": "dev"
      }
    },
    "test": {
      "command": "mocha build/**/*.test.js",
      "env": {
        "NODE_ENV": "dev"
      }
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/normalize-url": "^1.9.1",
    "better-npm-run": "^0.1.0",
    "datauri": "^1.1.0",
    "express": "^4.16.3",
    "fast-html-parser": "^1.0.1",
    "fs-extra": "^5.0.0",
    "http-proxy": "^1.16.2",
    "node-inject": "^0.1.0",
    "normalize-url": "^2.0.1",
    "promise-async": "^0.2.0",
    "query-string": "^5.0.0",
    "request": "^2.85.0",
    "request-promise-native": "^1.0.5",
    "shelljs": "^0.8.1",
    "shorthash": "0.0.2",
    "source-map-support": "^0.5.4",
    "untildify": "^3.0.2",
    "uuid": "^3.1.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/buffers": "^0.1.31",
    "@types/chai": "^4.1.2",
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.0.0",
    "@types/yargs": "^11.0.0",
    "autoprefixer": "^8.3.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "chai-string": "^1.4.0",
    "connect-livereload": "^0.6.0",
    "console-debug": "^0.4.2",
    "livereload": "^0.7.0",
    "mocha": "^5.0.5",
    "node-watch": "^0.5.8",
    "postcss": "^6.0.21",
    "precss": "^3.1.2",
    "supertest": "^3.0.0",
    "tape": "^4.7.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.8.1"
  }
}
